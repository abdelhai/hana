micros:
  - name: hana
    src: .
    engine: custom
    primary: true
    commands:
      - apt install -y unzip
      - curl -fsSL https://deno.land/x/install/install.sh | sh
      - $HOME/.deno/bin/deno compile --output app --allow-all ./src/index.ts
      - chmod +x app
    include:
      - app
    run: ./app
    dev: deno run -A --watch=src src/index.ts
    presets:
      env:
        - name: DENO_DIR
          description: Deno's config directory â€“ do not change
          default: /tmp/deno_dir
